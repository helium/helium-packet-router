[Unit]
Description=Helium Packet Router service
Documentation=https://github.com/helium/helium-packet-router/
After=network-online.target remote-fs.target nss-lookup.target
Wants=network-online.target

[Service]
Type=simple
PIDFile=/var/run/hpr.pid

ExecStart=/opt/hpr/bin/helium-packet-router background

WorkingDirectory=/opt/hpr
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID

[Install]
WantedBy=multi-user.target
