{cover_export_enabled, true}.

{cover_enabled, true}.

{deps, [
    {lager, "3.9.2"},
    {throttle, "0.3.0", {pkg, lambda_throttle}},
    {prometheus, "4.9.0"},
    {jsx, "3.1.0"},
    {recon, "2.5.2"},
    {elli, "3.3.0"},
    {observer_cli, "1.7.3"},
    {gproc, "0.9.0"},
    {backoff, "1.1.6"},
    {clique, ".*", {git, "https://github.com/helium/clique.git", {branch, "develop"}}},
    {grpcbox,
        {git, "https://github.com/novalabsxyz/grpcbox.git",
            {ref, "6180be0f4f4f199f824e60ae5c64ddd2daa5acff"}}},
    {hackney, "1.17.0"},
    {helium_proto, {git, "https://github.com/helium/proto.git", {branch, "master"}}},
    {grpc_client, {git, "https://github.com/helium/grpc_client.git", {branch, "master"}}},
    {erlang_lorawan,
        {git, "https://github.com/helium/erlang-lorawan.git",
            {ref, "29704ae1b29386993bfcf69d1ae4fc04d8502f0e"}}},
    {libp2p_crypto, {git, "https://github.com/helium/libp2p_crypto.git", {tag, "v1.5.2"}}},
    {iso8601, ".*", {git, "https://github.com/erlsci/iso8601.git", {tag, "1.3.1"}}},
    {xxhash,
        {git, "https://github.com/pierreis/erlang-xxhash",
            {ref, "92fcfe57a74d3ea1fe794ccdfdf62ce4a036c01b"}}},
    {erl_angry_purple_tiger,
        {git, "https://github.com/helium/erl_angry_purple_tiger.git",
            {ref, "c5476b6639314a75a99400c9dfa7603b24a6d18a"}}},
    {aws,
        {git, "https://github.com/aws-beam/aws-erlang",
            {ref, "9ad0ef74284ed3557497ef9219487f58880ae70d"}}}
]}.

{erl_opts, [
    debug_info,
    {parse_transform, lager_transform},
    warnings_as_errors
]}.

{plugins, [
    {grpcbox_plugin,
        {git, "https://github.com/novalabsxyz/grpcbox_plugin.git",
            {branch, "andymck/ts-master/combined-opts-and-template-changes"}}},
    {rebar3_format, "1.2.1"},
    {erlfmt, "1.0.0"}
]}.

{pre_hooks, []}.

{format, [
    {ignore, ["src/grpc/autogen/**/*"]},
    {files, [
        "rebar.config",
        "{src,include,test}/**/*.{hrl,erl,app.src}",
        "config/{sys,ct,grpc_server_gen}.{config,config.src}"
    ]},
    {formatter, erlfmt_formatter},
    {options, #{print_width => 100, ignore_pragma => true}}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used
]}.

{xref_ignores, [
    config_pb,
    packet_router_pb,
    client_packet_router_pb,
    client_config_pb
]}.

{relx, [
    {release, {hpr, semver}, [hpr, runtime_tools, tools, recon]},
    {vm_args, "config/vm.args"},
    {sys_config_src, "config/sys.config.src"},
    {include_src, false},
    {include_erts, true},
    {overlay, [
        {copy, "deb/local.conf", "etc/local.conf"},
        {copy, "./scripts/extensions/config", "bin/extensions/config"},
        {copy, "./scripts/extensions/info", "bin/extensions/info"}
    ]},
    {generate_start_script, true},
    {extended_start_script, true},
    {extended_start_script_extensions, [
        {config, "extensions/config"},
        {info, "extensions/info"}
    ]}
]}.

{shell, [
    {apps, [hpr]}
]}.

{profiles, [
    {test, [
        {deps, [
            {meck, "0.9.2"}
        ]}
    ]}
]}.

{ct_opts, [{sys_config, "config/ct.config"}]}.
